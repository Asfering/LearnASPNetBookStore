@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach(var b in ViewBag.Books)
            {
                <tr>
                    <td><p><a href="/Home/ViewBook/@b.Id">@b.Name</a></p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                    <td><p><a href="/Home/EditBook/@b.Id">Изменить</a></p></td>
                    <td><p><a href="/Home/Delete/@b.Id">Удалить</a></p></td>
                </tr>
            }
        </table>
    </div>